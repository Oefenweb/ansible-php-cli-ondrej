---
extends: default

rules:
  comments:
    min-spaces-from-content: 2
  comments-indentation: false
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy: disable
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  .tox/
